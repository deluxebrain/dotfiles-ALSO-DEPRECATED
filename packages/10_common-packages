#!/usr/bin/env bash

export DEBIAN_FRONTEND=noninteractive

sudo apt-get update -y
sudo apt-get upgrade -y

# Packages to allow apt to use repositories over https
sudo apt-get install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    wget \
    software-properties-common

# Support for PPA repositories
sudo apt-get install -y \
    software-properties-common

# Compilation
sudo apt-get install -y \
    make \
    cmake \
    build-essential \
    clang\
    libssl-dev \
    zlib1g-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    llvm \
    libncurses5-dev \
    libncursesw5-dev \
    libgdbm-dev \
    liblzma-dev \
    libc6-dev \
    libdb-dev \
    xz-utils \
    tk-dev \
    autoconf \
    automake \
    bison \
    libtool \
    libyaml-dev \
    sqlite3 \
    libgmp-dev
