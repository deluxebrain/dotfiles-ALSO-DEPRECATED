#!/usr/bin/env bash

# Start nvm
source "$XDG_CONFIG_HOME/dotfiles/bash_nvm.sh"

echo "Provisioning NodeJS environment" >&2

# Install latest version of node
nvm install node

# Install specific named versions of node
nvm install 8
nvm install 10

# Set the default version to the lastest installed NodeJS version
nvm alias default node
